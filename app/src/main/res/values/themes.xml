<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.LiveCricketInstantScore" parent="android:Theme.Material.Light.NoActionBar">

    </style>

    <style name="FirstScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="ClassTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PlayerTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/monst_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerPopup" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:popupBackground">@drawable/bg_spinner_popup</item>
        <item name="android:dropDownVerticalOffset">45dp</item>
        <item name="android:textStyle">bold</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>
    <style name="SpinnerItem_example" parent="android:TextAppearance.DeviceDefault.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/monst_medium</item>
    </style>
    <style name="TransparentBackgroundDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#801424</item>
        <item name="android:progressTint">#801424</item>
        <item name="android:colorControlActivated">#801424</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This would set the toolbar's background color -->
        <item name="android:background">@android:color/transparent</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
</resources>