<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/morescreenbg">
        <RelativeLayout
            android:id="@+id/bellIcon"
            android:layout_width="0sp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/logotext"
            app:layout_constraintEnd_toEndOf="@+id/notificationIcon"
            app:layout_constraintStart_toStartOf="@+id/notificationIcon"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/cencel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bellIcon" />

        <RelativeLayout
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bellIcon"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/circle_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon" />
        </RelativeLayout>
        <TextView
            android:id="@+id/notifying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/monst_bold"
            android:gravity="center_horizontal"
            android:text="More Options"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationIcon" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0sp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/notificationLay"
            android:layout_marginStart="-20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifying"
            app:layout_constraintStart_toStartOf="@+id/notificationIcon"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/notifications"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/notificationMenuIcon"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/notificationIconText"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/notificationMenuIcon"
                app:layout_constraintBottom_toBottomOf="@+id/notificationMenuIcon"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/notificationMenuIcon"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/monst_bold"
                android:text="Notifications"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                 />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/unchecked_box"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/notificationMenuIcon"
                app:layout_constraintTop_toTopOf="@+id/notificationMenuIcon"
                android:id="@+id/notificationMenuEnd"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:id="@+id/mainView"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/notificationMenuIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0sp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/emailLay"
            android:layout_marginStart="-20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationLay"
            app:layout_constraintStart_toStartOf="@+id/notificationIcon"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/email"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/emailIcon"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/emailMenuIcon"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/emailIcon"
                app:layout_constraintBottom_toBottomOf="@+id/emailIcon"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/emailIcon"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/monst_bold"
                android:text="Email"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/forward"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/emailIcon"
                app:layout_constraintTop_toTopOf="@+id/emailIcon"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/emailIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0sp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/shareLay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailLay"
            app:layout_constraintStart_toStartOf="@+id/emailLay"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/shareIcon"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/shareMenuIcon"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/shareIcon"
                app:layout_constraintBottom_toBottomOf="@+id/shareIcon"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/shareIcon"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/monst_bold"
                android:text="Share"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/forward"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/shareIcon"
                app:layout_constraintTop_toTopOf="@+id/shareIcon"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/shareIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0sp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/rateUsLay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shareLay"
            app:layout_constraintStart_toStartOf="@+id/emailLay"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/rate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/rateUsIcon"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/rateUsMenuIcon"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/rateUsIcon"
                app:layout_constraintBottom_toBottomOf="@+id/rateUsIcon"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/rateUsIcon"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/monst_bold"
                android:text="Rate"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/forward"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/rateUsIcon"
                app:layout_constraintTop_toTopOf="@+id/rateUsIcon"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/rateUsIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0sp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/termsLay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rateUsLay"
            app:layout_constraintStart_toStartOf="@+id/emailLay"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/terms_and_conditions"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/termsIcon"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/termsMenuIcon"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/termsIcon"
                app:layout_constraintBottom_toBottomOf="@+id/termsIcon"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/termsIcon"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/monst_bold"
                android:text="Terms  Conditions"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/forward"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/termsIcon"
                app:layout_constraintTop_toTopOf="@+id/termsIcon"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/termsIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/termsLay"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/termsLay"
            app:layout_constraintEnd_toEndOf="@+id/termsLay"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/monst_bold"
            android:text="Release:1.2.3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>